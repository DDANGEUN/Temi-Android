<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.robotemi.sdk.sample.MainActivity">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btnBack"
            android:background="#FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/undo"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:id="@+id/btnForward"
            android:scaleType="fitCenter"
            android:src="@drawable/redo"/>
        <EditText
            android:background="@null"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:id="@+id/address"
            android:singleLine="true" />
        <ImageButton
            android:id="@+id/btnRefresh"
            android:layout_width="0dp"
            android:background="#FFFFFF"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/refresh"/>
    </LinearLayout>
    <WebView
        android:layout_width="match_parent"
        android:id="@+id/internet"
        android:layout_height="0dp"
        android:layout_weight="17"
        android:hardwareAccelerated="true" />
  </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_sub1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/fab_sub2"
            android:layout_toLeftOf="@id/fab_main"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:backgroundTint="@color/colorWhite"
            android:tint="#5CB433"
            android:src="@drawable/home"
            android:visibility="invisible"
            app:borderWidth="0dp"
            app:fabCustomSize="55dp"
            app:fabSize="auto"
            app:maxImageSize="40dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_sub2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/fab_main"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#543443"
            android:src="@drawable/blog"
            android:visibility="invisible"
            app:borderWidth="0dp"
            app:fabCustomSize="55dp"
            app:fabSize="auto"
            app:maxImageSize="40dp" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_sub3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/fab_sub2"
            android:layout_alignTop="@id/fab_sub2"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#122443"
            android:src="@drawable/blog"
            android:visibility="invisible"
            app:borderWidth="0dp"
            app:fabCustomSize="55dp"
            app:fabSize="auto"
            app:maxImageSize="40dp"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_sub4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/fab_sub1"
            android:layout_alignLeft="@id/fab_sub1"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#5CB433"
            android:src="@drawable/blog"
            android:visibility="invisible"
            app:borderWidth="0dp"
            app:fabCustomSize="55dp"
            app:fabSize="auto"
            app:maxImageSize="40dp"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/menu"
            app:backgroundTint="@color/colorGrey"
            app:borderWidth="0dp"
            app:fabCustomSize="70dp"
            app:fabSize="auto"
            app:maxImageSize="50dp" />
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
